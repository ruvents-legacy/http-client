{
    "name": "ruvents/http-client",
    "description": "RUVENTS HTTP Client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov@ruvents.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*",
        "jakeasmith/http_build_url": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ruvents\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ruvents\\HttpClient\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "platform": {
            "php": "5.3.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
